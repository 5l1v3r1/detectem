# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.py]
# isort configuration
multi_line_output=3
include_trailing_comma=true
lines_between_types=1

[*.lua]
indent_size = 2

[*.yml]
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[.bumpversion.cfg]
trim_trailing_whitespace = false
indent_style = tab
